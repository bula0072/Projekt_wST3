@model Projekt_w58954.Przedmiot

@{
    ViewData["Title"] = "Usuń przedmiot";
}
    <div class="container">
        <div class="row">
            <div class="col text-center">
                <h3>Jesteś pewien, że chcesz usunąc przedmiot?</h3>
            </div>
        </div>
        <dl class="row justify-content-center">
            <dt class="col-sm-6">
                Nazwa przedmiotu
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.Nazwa_przedmiotu)
            </dd>
            <dt class="col-sm-6">
                Ilość godzin
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.Ilosc_godzin)
            </dd>
            <dt class="col-sm-6">
                Forma przedmiotu
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.Forma_przedmiotu)
            </dd>
            <dt class="col-sm-6">
                Prowadzący
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.Prowadzacy)
            </dd>
        </dl>
        <div class="row justify-content-center">
            <div class="col-sm-4">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Usuń" class="btn btn-light btn-block" />
                    <a class="btn btn-light btn-block" asp-action="Index">Powrót</a>
                </form>
            </div>
        </div>
    </div>
