@model Projekt_w58954.Przedmiot

@{
    ViewData["Title"] = "Edytuj przedmiot";
}

<div class="container">
    <div class="row">
        <div class="col text-center">
            <h1>Edycja danych</h1>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-sm-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Nazwa_przedmiotu" class="control-label">Nazwa przedmiotu</label>
                    <input asp-for="Nazwa_przedmiotu" class="form-control" />
                    <span asp-validation-for="Nazwa_przedmiotu" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Ilosc_godzin" class="control-label">Ilość godzin</label>
                    <input asp-for="Ilosc_godzin" class="form-control" />
                    <span asp-validation-for="Ilosc_godzin" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Forma_przedmiotu" class="control-label">Forma przedmiotu</label>
                    <input asp-for="Forma_przedmiotu" class="form-control" />
                    <span asp-validation-for="Forma_przedmiotu" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Prowadzacy" class="control-label">Prowadzący</label>
                    <input asp-for="Prowadzacy" class="form-control" />
                    <span asp-validation-for="Prowadzacy" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Zapisz" class="btn btn-light btn-block" />
                    <a class="btn btn-light btn-block" asp-action="Index">Powrót</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
