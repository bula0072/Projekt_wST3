@model Projekt_w58954.Student

@{
    ViewData["Title"] = "Edytuj dane studenta";
}

<div class="container">
    <div class="row">
        <div class="col text-center">
            <h1>Edycja danych</h1>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-sm-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Imie" class="control-label">Imię</label>
                    <input asp-for="Imie" class="form-control" />
                    <span asp-validation-for="Imie" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Nazwisko" class="control-label">Nazwisko</label>
                    <input asp-for="Nazwisko" class="form-control" />
                    <span asp-validation-for="Nazwisko" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Numer_dziennika" class="control-label">Numer dziennika</label>
                    <input asp-for="Numer_dziennika" class="form-control" />
                    <span asp-validation-for="Numer_dziennika" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Rok_urodzin" class="control-label">Rok urodzenia</label>
                    <input asp-for="Rok_urodzin" class="form-control" />
                    <span asp-validation-for="Rok_urodzin" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Zapisz" class="btn btn-light btn-block" />
                    <a class="btn btn-light btn-block" asp-action="Index">Powrót</a>
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
