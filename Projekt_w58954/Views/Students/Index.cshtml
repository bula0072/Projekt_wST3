@model IEnumerable<Projekt_w58954.Student>

@{
    ViewData["Title"] = "Studenci";
}
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Imię</th>
            <th scope="col">Nazwisko</th>
            <th scope="col">Numer dziennika</th>
            <th scope="col">Data urodzenia</th>
            <th scope="col">Działanie</th>
        </tr>
    </thead>
    <tbody>
     
        @{ 
            int i = 0;
            foreach (var item in Model)
            {
            <tr>
                <th scope="row">@(i = i + 1)</th>
                <td>@Html.DisplayFor(modelItem => item.Imie)</td>
                <td>@Html.DisplayFor(modelItem => item.Nazwisko)</td>
                <td>@Html.DisplayFor(modelItem => item.Numer_dziennika)</td>
                <td>@Html.DisplayFor(modelItem => item.Rok_urodzin)</td>
                <td>
                    <a class="btn btn-light" asp-action="Edit" asp-route-id="@item.Id">Edycja</a>
                    <a class="btn btn-light" asp-action="Details" asp-route-id="@item.Id">Więcej</a>
                    <a class="btn btn-light" asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
                </td>
            </tr>
            }
        }
    </tbody>
</table>
<a class="btn btn-light ml-5" asp-action="Create">Dodaj studenta</a>